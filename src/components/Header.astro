---
import ThemeToogle from "@components/ThemeToogle.astro";
import LanguageDropdown from "@components/LanguageDropdown.astro";
---

<header
  id="header-nav"
  class="flex fixed z-50 top-0 justify-between items-center py-5 w-full mx-auto px-4"
>
  <div
    class="w-full mx-auto max-w-screen-xl p-4 items-center justify-between flex"
  >
    <img
      class="rounded-full w-12 h-12"
      src="https://avatars.githubusercontent.com/u/7496040?s=96&v=4"
      alt="Cristian Davila Photo"
    />
    <nav>
      <ul class="flex flex-row gap-x-10 opacity-80 display-none sm:flex">
        <li class="flex items-center">
          <a href="#top" title="Go to Home">Home</a>
        </li>
        <li class="flex items-center">
          <a href="#experience" title="Go to Experience Section">Experience</a>
        </li>
        <li class="flex items-center">
          <a href="#contact" title="Go to Contact Section">Contact</a>
        </li>
        <li class="flex items-center">
          <ThemeToogle />
        </li>
        <li class="flex items-center">
          <LanguageDropdown />
        </li>
      </ul>
    </nav>
  </div>
</header>
